
@{
    int contadorP= 1;
}
<div style="display: flex; justify-content: center; align-items: center;">
    <h2>@ViewBag.CambioPosible</h2>
</div>
<form method="get" action='@Url.Action("CambiarContrasena")' autocomplete="off">
    <div class="container">
        <h2>Cambio de Contrase単a</h2>
        <div class="row">
            <div class="col-25">
                <label for="fname">Mail:</label>
            </div>
            <div class="col-75">
                <input type="text" id="fname" name="mail" placeholder="Su mail..">
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="fname">Pregunta:</label>
            </div>
            <div class="col-75">
                <select class="form-select" id="idPregunta" name="idPregunta" aria-label="Floating label select example">
                    <option selected>Seleccion de preguntas</option>
                    @for(int i=0;i<ViewBag.PreguntasEleccion.Count;i++){
                        <option value="@contadorP">@ViewBag.PreguntasEleccion[i].Contenido</option>
                        contadorP++;
                    }
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="fname">Respuesta:</label>
            </div>
            <div class="col-75">
                <input type="text" id="fname" name="respuesta" placeholder="Su respuesta..">
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="fname">Nueva contrase単a:</label>
            </div>
            <div class="col-75">
                <input type="password" id="password" name="password"  onkeyup="validatePassword()" placeholder="Su nueva contrase単a..">
                <p id="resultado"></p>
            </div>
        </div>
        <div class = "BotonLogin">
            <input type="submit" value="Cambiar contrase単a"></input>
        </div>
    </div>
</form>
<button class="button" style="vertical-align:middle"><a href='@Url.Action("Login","Account")'><span>Volver al Login</span></a></button>