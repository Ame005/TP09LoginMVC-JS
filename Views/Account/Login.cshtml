<link rel = "stylesheet" href ="/css/site.css">
<div class = "container">
    <form method="get" action='@Url.Action("VerificarDatos")' autocomplete="off">
        <h1>Login</h1>
        <div class = "UYC">
            <h3>Username</h3>
            <div class = "Formulario">
                <input type="text" required="" name="username" placeholder = "Su usuario...">
            </div>
            <h3>Contraseña</h3>
            <div class = "Formulario">
                <input type="password" required="" name="contrasena" id="contrasena" placeholder="Su contaseña">
            </div>
            <input type="checkbox" onclick="showPassword()">Mostrar contraseña
            <br>
            <a id ="olvidada" href='@Url.Action("OlvideMiContrasena")'>¿Olvidaste tu contraseña?</a>
        </div>
        <div class = "BotonLogin">
            <a href='@Url.Action("VerificarDatos","Account")'><input type="submit" value="Login"></input></a>
        </div>
    </form>
        <div class = "Opciones">
            <h3>¿No tienes una cuenta? <a href='@Url.Action("Registro","Account")'>Registrarse</a></h3>
    </div>
</div>